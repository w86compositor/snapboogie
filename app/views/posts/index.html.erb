<% @posts.each do |post| %>
<div class="container">
	<div class="row" style="padding-top: 60px;">
		<div class="col-lg-12">
			<div class="card" style="width: 640px; margin: 0 auto 60px auto; background-color: #fff;">
			  <div class="card-header" style="color: #333;">
			    <h3><%= post.caption %></h3>	
			  </div>
			  <div class="card-body p-0">
			    <%= link_to (image_tag post.picture.url, class: 'img-fluid'), post_path(post) %>
			  </div>
			  <div class="card-footer" style="background-color: #fff">
			    I love this picture
			  </div>
			</div>
		</div>
	</div>
</div>
<% end %>

