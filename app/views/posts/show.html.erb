<div class="container">
	<div class="row" style="padding-top: 60px;">
		<div class="col-lg-12">
			<div class="card" style="width: 640px; margin: 0 auto 40px auto">
			  <div class="card-header" style="color: #125688;">
			    <h3><%= @post.user.user_name%></h3>
			    <h6><%= @post.caption %></h6>
			  </div>
			  <div class="card-body p-0">
			    <%= image_tag @post.picture.url, class: 'img-fluid' %>
			  </div>
			  <div class="card-footer">
			  	<% if @post.user.id == current_user.id %>
				  <%= link_to edit_post_path(@post) do %>  
				  	<i class="fa fa-pencil-square-o fa-2x" aria-hidden="true"></i>
				  <% end %>
				  <%= link_to post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this post?" } do %>
				    <i class="fa fa-trash-o fa-2x" aria-hidden="true"></i>
				  <% end %>
				<% else %>
				   <%= link_to post_path do %>
					<i class="fa fa-podcast fa-2x" aria-hidden="true"></i>
				   <% end %>
			    <% end %>
			  </div>
			</div>
		</div>
	</div>
</div>