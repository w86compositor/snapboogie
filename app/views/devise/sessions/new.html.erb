<div class="container">
  <div class="row">
    <div class="col-sm-4">
      <%= image_tag('instagram-bg-photo.png', class: 'img-fluid', style: 'margin: 22px auto 8px;') %>
    </div>
    <div class="col-sm-4 text-center" style="height: 348px; width: 330px; background-color: #fff; border: 1px solid #e6e6e6">
    	<div class="form-group" style="margin: 22px auto 8px">
    		<%= image_tag('instagram.png') %>
    	</div>
			<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			  <div class="form-group">
			    <%= f.input_field :email, required: false, autofocus: true, placeholder: 'email', style: 'width: 250px;' %>
			  </div>
			  <div class="form-group">
			    <%= f.input_field :password, required: false, placeholder: 'password', style: 'width: 250px;' %>
			  </div>
			  <div class="form-group">
			    <%= f.button :submit, "Log in", class: 'btn btn-primary', style: 'width: 250px; background: #3897f0; border-color: #3897f0;' %>
			  </div>
			  <div class="form-group" style="margin: 10px 40px 18px; text-transform: uppercase;">
			  	<p>or</p>
			  </div>
			  <div class="form-group">
			  	<p style="color: #385185;"><i class="fa fa-facebook-official" aria-hidden="true"></i>Log in with Facebook</p>
			  	<%= link_to "Forgot your password?", new_password_path(resource_name), style: "color: #385185;" %>
			  </div>
			  <div class="text-center" style="height: 48px; width: 348px; background-color: #fff; border: 1px solid #e6e6e6">
			  	<p style="color: #385185;">DonÂ´t have an account? <%= link_to "Sign up", new_registration_path(resource_name), style: "color: #385185;" %></p>
			  </div>
	 			</div>
			<% end %>
    </div>
  </div>
</div>


		



